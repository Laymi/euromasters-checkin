template(name='guestlist')
  #guests
    h3 guestlist

    if guests
      h5 Showing Guestlist

      table
        thead
          tr
            th ID
            th First Name
            th Last Name
            th Host
            th Contact
            th Delete/Edit
        tbody
            tr
              td
                a(class='waves-effect waves-light btn', id='addNewStudent') Add new
                input(type="text",id="_id", style="display:none")
              td
                input(type="text",id="first_name")
              td
                input(type="text",id="last_name")
              td
                input(type="text",id="hostName", disabled)
              td
                input(type="text",id="contact")
              td
          each students
            tr
              td
                span(id="{{_id}}-_id") {{_id}}
              td
                span(id="{{_id}}-first_name") {{first_name}}
              td
                span(id="{{_id}}-last_name") {{last_name}}
              td
                span(id="{{_id}}-hostName") {{hostName}}
              td
                span(id="{{_id}}-contact") {{contact}}
              td
                a(class='waves-effect waves-light btn deletebtn', name='{{_id}}') Delete
                a(class='waves-effect waves-light btn editbtn', name='{{_id}}') Edit
