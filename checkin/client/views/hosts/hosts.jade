template(name='Hosts')
  #hosts
    h3 List of hosts
    if hosts
      h5 Showing global List of hosts

      table
        thead
          tr
            th ID
            th First Name
            th Last Name
            th Contact
            th Email
            th Guests
            th Guest Contact
            th Info
            th Guestload
            th Delete / Edit / Mail
        tbody
            tr
              td
                a(class='waves-effect waves-light btn', id='addNewHost') Add new
                input(type="text",id="_id",style="display:none")
              td
                input(type="text",id="first_name")
              td
                input(type="text",id="last_name")
              td
                input(type="text",id="contact")
              td
                input(type="text",id="email")
              td
                input(type="text",id="guests", disabled)
              td
                input(type="text",id="guest_contact")
              td
                input(type="text",id="info")
              td
                input(type="text",id="guestload")
          each hosts
            tr
              td
                span(id="{{_id}}-_id") {{_id}}
              td
                span(id="{{_id}}-first_name") {{info.first_name}}
              td              
                span(id="{{_id}}-last_name") {{info.last_name}}
              td
                span(id="{{_id}}-contact") {{info.contact}}
              td
                span(id="{{_id}}-email") {{info.email}}
              td
                span(id="{{_id}}-guests") {{info.guests}}
              td
                span(id="{{_id}}-guest_contact") {{info.guest_contact}}
              td
                span(id="{{_id}}-info") {{info.info}}
              td
                span(id="{{_id}}-guestload") {{info.guestload}}
              td
                a(class='waves-effect waves-light btn deletebtn', name='{{_id}}') Delete
                a(class='waves-effect waves-light btn editbtn', name='{{_id}}') Edit
                a(class='waves-effect waves-light btn mailbtn', name='{{_id}}') Auto Mail
                a.contact(class='waves-effect waves-light btn',href='mailto:test@user.com?subject=Hello!') Manual Email
