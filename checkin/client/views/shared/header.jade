template(name='Header')
  header
    nav
      div.nav-wrapper.primaryColor

        a(href='{{pathFor "home"}}')
          img(src='/img/logo.png' style='height: 75%; margin-top: 10px;padding-left: 20px')

        ul.right
          if currentUser
            if currentUserIsAdmin
              .nav-commands.center
                a(href="{{pathFor 'home'}}") Dashboard
                a(href="{{pathFor 'assignmentsAll'}}") Assignments
                a(href="{{pathFor 'users'}}") User Rights
            li
              input.validate(type='text', placeholder='Search',id="searchAssignment", style='margin-right: 15px; color:green;')
              ul.collection
                each assignments
                  li.collection-item(style='float:none;')
                    a(href="{{pathFor 'assignments'}}") {{participant_first_name}} {{participant_last_name}}
          else
            li
              a(class='waves-effect waves-light btn', id='login', href='{{pathFor "login"}}' style='margin-right:120px') Login
